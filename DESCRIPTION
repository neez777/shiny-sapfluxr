Package: shinysapfluxr
Type: Package
Title: Interactive Shiny Interface for Sap Flow Analysis
Version: 0.1.0
Authors@R: c(
    person("Grant", "Joyce", email = "neez1977@gmail.com",
           role = c("aut", "cre"), comment = "Developer"),
